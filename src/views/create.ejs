<%- include('./partials/head'); %>
<body>
  <%- include('./partials/header'); %>
  
  <main>
    <div class="encabezado">
      <h2>Crear Nueva Nota</h2>
      <a href="/">Volver</a>
    </div>
    <form action="/note/newNote" method="POST" enctype="multipart/form-data">
      <div class="titulo">
        <label for="title">Ingresa el titulo de la nota</label>
        <input type="text" name="title">
      </div>
      <div class="color">
        <input type="text" style="display: none" value="background-color:" name="style">
        <label for="color">Elige un color para el titulo</label>
        <input type="color" name="color">
      </div>
      <div class="contenido">
        <label for="content">Escribe tu nota Aquí</label>
        <textarea name="content" id="contenidoNota" cols="30" rows="10" placeholder="Escribe Aqui..."></textarea>
      </div>
      <div class="archivo">
        <label for="file">Puedes agregar archivos aquí</label>
        <input type="file" multiple name="files">
      </div>
      <div class="submit-reset">
        <button type="reset">Vaciar Campos</button>
        <button type="submit">Crear Nota</button>
      </div>
    </form>
  </main>

  <%- include('./partials/footer'); %>
</body>
</html>